<div class="mt-4">
    <div class="container">
        <h3>Edit khoa hoc</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
          <label for="name">Ten khoa hoc</label>
          <input type="text" name="name" id="name" class="form-control" placeholder="ten khoa hoc" value="{{course.name}}">
        </div>
        <div class="form-group">
          <label for="description">Mo ta</label>
          <textarea id="description" class="form-control" placeholder="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
          <label for="videoId">video id</label>
          <input type="text" name="videoId" id="videoId" class="form-control" placeholder="video id" value="{{course.videoId}}">
        </div>
        <div class="form-group">
          <label for="level">level</label>
          <input type="text" name="level" id="level" class="form-control" placeholder="level" value="{{course.level}}">
        </div>
    <button type="submit" class="btn btn-primary">Update</button>
    </form>
    </div>
</div>